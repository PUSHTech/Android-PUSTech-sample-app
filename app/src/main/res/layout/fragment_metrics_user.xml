<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_metrics_user_send_metrics"
        style="@style/PushTechButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/send_metrics" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_metrics_user_send_metrics"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fragment_metrics_user_first_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="@string/first_name_hint"
                android:padding="5dp" />

            <EditText
                android:id="@+id/fragment_metrics_user_last_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="@string/last_name_hint"
                android:padding="5dp" />

            <EditText
                android:id="@+id/fragment_metrics_user_email"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:padding="5dp" />

            <EditText
                android:id="@+id/fragment_metrics_user_phone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="@string/phone_hint"
                android:inputType="phone"
                android:padding="5dp" />

            <EditText
                android:id="@+id/fragment_metrics_user_city"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="@string/city_hint"
                android:padding="5dp" />

            <EditText
                android:id="@+id/fragment_metrics_user_id"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="@string/user_id_hint"
                android:padding="5dp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/fragment_metrics_user_gender"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/fragment_metrics_user_country"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_metrics_user_birthday"
                    style="@style/PushTechButton"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/fragment_metrics_user_birthday" />


                <TextView
                    android:id="@+id/fragment_metrics_user_login_generic"
                    style="@style/PushTechButton"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/fragment_metrics_user_login_generic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_metrics_user_logout_generic"
                    style="@style/PushTechButton"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/fragment_metrics_user_logout_generic" />

                <TextView
                    android:id="@+id/fragment_metrics_user_register_generic"
                    style="@style/PushTechButton"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/fragment_metrics_user_register_generic" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>