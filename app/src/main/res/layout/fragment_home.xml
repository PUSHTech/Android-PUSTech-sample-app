<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:src="@drawable/logo_pushtech" />

        <EditText
            android:id="@+id/fragment_home_first_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:hint="@string/first_name_hint"
            android:padding="5dp" />

        <EditText
            android:id="@+id/fragment_home_last_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:hint="@string/last_name_hint"
            android:padding="5dp" />

        <EditText
            android:id="@+id/fragment_home_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:padding="5dp" />

        <EditText
            android:id="@+id/fragment_home_phone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:hint="@string/phone_hint"
            android:inputType="phone"
            android:padding="5dp" />

        <TextView
            android:id="@+id/fragment_home_send_user_data"
            style="@style/PushTechButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/send_user_data" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_home_send_local_push"
            style="@style/PushTechButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/send_local_push" />


        <TextView
            android:id="@+id/fragment_home_send_metrics"
            style="@style/PushTechButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/send_metrics" />

    </LinearLayout>
</RelativeLayout>
